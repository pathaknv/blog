<h1>Edit User: <%= @user.name %></h1>

<%= form_with model: @user do |f| %>
  <label> Name: </label>
  <%= f.text_field :name %>
  <br>
  <br>

  <label> Email: </label>
  <%= f.text_field :email %>
  <br>
  <br>

  <label> Mobile Number: </label>
  <%= f.text_field :mobile_number %>
  <br>
  <br>

  <%= f.submit 'Save'%>
<% end %>